<%
require 'bigdecimal'
require 'bigdecimal/util'
-%>
# Use the libinput driver for all event devices
Section "InputClass"
    Identifier      "libinput"
    Driver          "libinput"
    MatchDevicePath "/dev/input/event*"
    Option          "Tapping" "yes"
    Option          "AccelSpeed" "<%= ((scope.lookupvar('nest::text_scaling_factor').to_d - 1).to_f / 1.5).round(2) %>"
EndSection
