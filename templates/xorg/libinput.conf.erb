# Use the libinput driver for all event devices
Section "InputClass"
    Identifier      "libinput"
    Driver          "libinput"
    MatchDevicePath "/dev/input/event*"
    Option          "Tapping" "yes"
    Option          "DPIScaleFactor" "<%= scope['::nest::text_scaling_factor'] %>"
EndSection

Section "InputClass"
    Identifier      "libinput Acceleration"
    MatchDriver     "libinput"
    MatchIsTouchpad "on"
    Option          "AccelSpeeed" "0.25"
EndSection
