#!/bin/bash

if [[ $XDG_SESSION_TYPE == 'x11' ]]; then
    export GTK_USE_PORTAL=1 MOZ_X11_EGL=1
else
    if [[ $MOZ_DISABLE_WAYLAND == '1' ]]; then
        unset GDK_DPI_SCALE
    else
        export MOZ_ENABLE_WAYLAND=1
    fi
fi

MOZ_USE_XINPUT2=1 MOZ_WEBRENDER=<%= @webrender %> exec /usr/lib64/firefox/firefox "$@"

