<VirtualHost *:80>
    ServerName <%= @fqdn %>
    ServerAlias <%= @short_name %>
    ErrorLog "/var/log/apache2/<%= @fqdn %>-error_log"
    CustomLog "/var/log/apache2/<%= @fqdn %>-access_log" combined
    DocumentRoot "<%= @package_dir %>"

    <Directory "<%= @package_dir %>">
        Require all granted
    </Directory>
</VirtualHost>
